./configure --prefix=/pkg/fftw/3.3.3/$PRG_ENV  --enable-shared --enable-openmp --enable-mpi --enable-threads --with-gnu-ld --enable-float

make >& make.log &

make check >& makecheck.log &
make install  >& makeinstall.log &
make installcheck >& makeinstallcheck.log &

./configure --prefix=/pkg/fftw/2.1.5/$PRG_ENV  --enable-shared --enable-openmp --enable-mpi --enable-threads --with-gnu-ld --enable-float --enable-fortran >&configure.log &

make -j 8  >& make.log &
make check >& makecheck.log &
make install  >& makeinstall.log &

