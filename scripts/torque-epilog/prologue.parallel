#!/bin/sh
export LC_ALL=C


jobid=$1
user=$2
group=$3

PBS_HOME=/var/lib/torque/

nodefile=$PBS_HOME/aux/$jobid
if [ -r $nodefile ] ; then
    nodes=$(sort $nodefile | uniq)
else
    nodes=localhost
fi


export TMP_DIR=/tmp/$user.$jobid

mkdir -p -m 700 $TMP_DIR 

chown $user.$group $TMP_DIR

ulimit -s unlimited
ulimit -l unlimited

logger -t pbs_mom "enable $user login"

if [ $user != 'root' ]; then
  perl -pi -e "s/:ALL\$/ $user :ALL/" /etc/security/access.conf
fi



exit 0
          
