#!/bin/bash
export LC_ALL=C

jobid=$1
user=$2
nodefile=/var/lib/torque/aux/$jobid
if [ -r $nodefile ] ; then
    nodes=$(sort $nodefile | uniq)
else
    nodes=localhost
fi

export TMP_DIR=/tmp/$user.$jobid

rm -rf $TMP_DIR

logger -t pbs_mom "disable $user login"

if [ $user != 'root' ]; then
 perl -pi -e "s/ $user //g" /etc/security/access.conf
fi
